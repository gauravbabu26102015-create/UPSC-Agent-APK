<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:background="@color/background">
    <!-- Toolbar -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="56dp"
        android:orientation="horizontal" android:gravity="center_vertical" android:paddingHorizontal="12dp"
        android:background="@color/primary">
        <ImageButton android:id="@+id/btn_back_quiz" android:layout_width="40dp" android:layout_height="40dp"
            android:src="@drawable/ic_back" android:background="?attr/selectableItemBackgroundBorderless" app:tint="@android:color/white" />
        <TextView android:id="@+id/tv_quiz_activity_title" android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:textSize="18sp" android:textColor="@android:color/white"
            android:textStyle="bold" android:layout_marginStart="8dp" android:singleLine="true" />
        <TextView android:id="@+id/tv_quiz_progress" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="14sp" android:textColor="#CCFFFFFF" />
    </LinearLayout>
    <ProgressBar android:id="@+id/progress_quiz" android:layout_width="match_parent" android:layout_height="4dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:progressTint="@color/accent" />
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical" android:padding="16dp">
            <TextView android:id="@+id/tv_question_number" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="14sp" android:textColor="@color/primary" android:textStyle="bold" />
            <TextView android:id="@+id/tv_question_text" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="18sp" android:textColor="@color/text_primary" android:layout_marginTop="8dp"
                android:lineSpacingExtra="4dp" />
            <!-- Options -->
            <androidx.cardview.widget.CardView android:id="@+id/card_option_a" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="16dp" app:cardCornerRadius="10dp"
                app:cardElevation="2dp" android:foreground="?attr/selectableItemBackground">
                <TextView android:id="@+id/tv_option_a" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:id="@+id/card_option_b" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp" app:cardCornerRadius="10dp"
                app:cardElevation="2dp" android:foreground="?attr/selectableItemBackground">
                <TextView android:id="@+id/tv_option_b" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:id="@+id/card_option_c" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp" app:cardCornerRadius="10dp"
                app:cardElevation="2dp" android:foreground="?attr/selectableItemBackground">
                <TextView android:id="@+id/tv_option_c" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView android:id="@+id/card_option_d" android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="8dp" app:cardCornerRadius="10dp"
                app:cardElevation="2dp" android:foreground="?attr/selectableItemBackground">
                <TextView android:id="@+id/tv_option_d" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
            <TextView android:id="@+id/tv_explanation" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_marginTop="12dp" android:padding="12dp" android:background="#FFF9C4"
                android:textSize="14sp" android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="12dp" android:background="@android:color/white"
        android:elevation="8dp">
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_skip_question"
            android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
            android:text="Skip" android:layout_marginEnd="8dp" style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        <com.google.android.material.button.MaterialButton android:id="@+id/btn_next_question"
            android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
            android:text="Check Answer" android:backgroundTint="@color/primary" />
    </LinearLayout>
</LinearLayout>
