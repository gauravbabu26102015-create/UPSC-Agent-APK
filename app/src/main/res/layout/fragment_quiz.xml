<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/background">
    <TextView android:id="@+id/tv_quiz_header" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="ðŸ“ Quiz Center" android:textSize="22sp" android:textStyle="bold"
        android:textColor="@color/primary" android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" />
    <TextView android:id="@+id/tv_quiz_sub" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Import PDFs or create quizzes manually" android:textSize="14sp" android:textColor="@color/text_secondary"
        android:paddingStart="16dp" app:layout_constraintTop_toBottomOf="@id/tv_quiz_header" app:layout_constraintStart_toStartOf="parent" />
    <TextView android:id="@+id/tv_empty_quiz" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="No quizzes yet.\nImport a PDF or create one manually!" android:textAlignment="center"
        android:textSize="16sp" android:textColor="@color/text_secondary" android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_quizzes"
        android:layout_width="0dp" android:layout_height="0dp" android:padding="8dp" android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_quiz_sub" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_import_quiz"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="16dp"
        android:src="@drawable/ic_add" app:backgroundTint="@color/accent" app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
