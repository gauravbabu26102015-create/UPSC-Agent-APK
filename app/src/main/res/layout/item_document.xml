<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginVertical="4dp" app:cardCornerRadius="10dp" app:cardElevation="1dp"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="14dp" android:gravity="center_vertical">
        <TextView android:id="@+id/tv_doc_icon" android:layout_width="40dp" android:layout_height="40dp"
            android:textSize="28sp" android:gravity="center" />
        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
            <TextView android:id="@+id/tv_doc_name" android:layout_width="match_parent" android:layout_height="wrap_content"
                android:textSize="15sp" android:textStyle="bold" android:maxLines="2" android:ellipsize="end" />
            <TextView android:id="@+id/tv_doc_type" android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textSize="12sp" android:textColor="@color/text_secondary" android:layout_marginTop="2dp" />
        </LinearLayout>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="â†’" android:textSize="18sp" android:textColor="@color/text_secondary" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
